extends layout
block content
  include blocks/header
  section.container
    .item
      form.form(action=`/actualizar/${data.movie_id}` method="POST")
        fieldset.center
          div.container
            label.item.i-b.ph3(for="movie_id") IMDB id:
            input.item.i-b.ph4#id(type="text", name="id", value=data.movie_id required, disabled)
            input#movie_id(type="hidden", name="movie_id" value=data.movie_id required)
          div.container
            label.item.i-b.ph3(for="title") Título:
            input.item.i-b.ph4#title(type="text", name="title", value=data.title required)
          div.container
            label.item.i-b.ph3(for="release_year") Año:
            input.item.i-b.ph4#release_year(type="number", name="release_year", value=data.release_year required)
          div.container
            label.item.i-b.ph3(for="rating") Calificación:
            input.item.i-b.ph4#rating(type="text", name="rating", value=data.rating required)
          div.container
            label.item.i-b.ph3(for="image") Poster:
            input.item.i-b.ph4#image(type="text", name="image", value=data.image required)
          div.container
            input.button.editar(type="submit", value="Actualizar")
            input(type="hidden", name="_method", value="PUT")
  
  include blocks/footer